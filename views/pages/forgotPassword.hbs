<div
  class="tw-flex tw-justify-center tw-items-center tw-min-h-screen tw-bg-gray-100"
>
  <div
    class="tw-w-[550px] tw-bg-white tw-p-8 tw-text-sm tw-font-inherit tw-text-gray-900 tw-flex tw-flex-col tw-gap-5 tw-rounded-lg tw-shadow-md"
  >
    <div class="tw-text-center tw-font-semibold tw-text-lg">
      Forgot Password
    </div>
    <form class="tw-flex tw-flex-col tw-gap-5">
      <div class="tw-flex tw-flex-col tw-gap-1">
        <label htmlFor="email" class="tw-mb-1">Email</label>
        <input
          type="text"
          id="email"
          name="email"
          placeholder="Enter your email"
          required
          class="tw-w-full tw-py-3 tw-px-4 tw-rounded-md tw-border tw-border-gray-300 tw-font-inherit tw-placeholder-opacity-50 focus:tw-outline-none focus:tw-border-blue-500"
        />
      </div>
      <button
        type="submit"
        class="tw-flex tw-justify-center tw-items-center tw-font-bold tw-text-white tw-bg-[#53aa51] tw-border-none tw-w-full tw-py-3 tw-px-4 tw-rounded-md tw-shadow-md tw-transition-all tw-duration-150 active:tw-scale-95"
        onclick="window.location.href='/verify-otp'"
      >
        Receive OTP code
      </button>
    </form>
    <p class="tw-text-center tw-font-medium">
      Don't have an account?
      <a
        href="#"
        class="tw-text-[#53aa51] tw-font-bold tw-text-md tw-no-underline"
      >
        Sign up now
      </a>
    </p>
  </div>
</div>